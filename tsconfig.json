{ 
  "compilerOptions": { 
      "emitDecoratorMetadata": true, 
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "module": "commonjs", 
      "target": "es6",
      "sourceMap": true,
      "outDir": "./dist",
      "declaration": true,
      "allowJs": true,
      "forceConsistentCasingInFileNames": true,
      "esModuleInterop": true,
      "strict": true,
  },
  "exclude": [
      "node_modules",
      "dist",
      ".vscode",
      "docs"
  ]
} 